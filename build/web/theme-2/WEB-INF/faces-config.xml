<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>sessionController</managed-bean-name>
        <managed-bean-class>controllers.SessionController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <default-locale>fr</default-locale>
            <default-locale>cn</default-locale>
        </locale-config>    
        
        <resource-bundle>
            <base-name>controllers.language</base-name>
            <var>lm</var>
        </resource-bundle>
    </application>
    <managed-bean>
        <managed-bean-name>userController</managed-bean-name>
        <managed-bean-class>controllers.UserController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>departmentController</managed-bean-name>
        <managed-bean-class>controllers.DepartmentController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>serviceController</managed-bean-name>
        <managed-bean-class>controllers.ServiceController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>itmaterialController</managed-bean-name>
        <managed-bean-class>controllers.ItmaterialController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>hardwareConsController</managed-bean-name>
        <managed-bean-class>controllers.HardwareConsController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>softwareConsController</managed-bean-name>
        <managed-bean-class>controllers.SoftwareConsController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>privilegesController</managed-bean-name>
        <managed-bean-class>controllers.PrivilegesController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>logfileController</managed-bean-name>
        <managed-bean-class>controllers.LogfileController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>demandController</managed-bean-name>
        <managed-bean-class>controllers.DemandController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>chartView</managed-bean-name>
        <managed-bean-class>controllers.ChartView</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>attributionController</managed-bean-name>
        <managed-bean-class>controllers.AttributionController</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>customizedDocumentsView</managed-bean-name>
        <managed-bean-class>controllers.CustomizedDocumentsView</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>chartController</managed-bean-name>
        <managed-bean-class>controllers.chartController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
</faces-config>
